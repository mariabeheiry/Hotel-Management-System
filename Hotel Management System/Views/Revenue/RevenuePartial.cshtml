<div>

    <h4 class="mt-3">Summary</h4>

    <ul>
        <li>
            <strong>Total Revenue:</strong>
            @(ViewBag.TotalRevenue ?? 0) USD
        </li>
    </ul>

    <hr />

    <h4>Revenue By Month</h4>

    @if (ViewBag.RevenueByMonth != null && ViewBag.RevenueByMonth.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Month</th>
                    <th>Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RevenueByMonth)
                {
                    <tr>
                        <td>@item.Year</td>
                        <td>
                            @(System.Globalization.CultureInfo.CurrentCulture
                            .DateTimeFormat.GetMonthName(item.Month))
                        </td>
                        <td>@item.Revenue USD</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No revenue data for selected filters.</p>
    }

    <hr />

    <h4>Revenue By Room Type</h4>

    @if (ViewBag.RevenueByRoomType != null && ViewBag.RevenueByRoomType.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Room Type</th>
                    <th>Revenue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.RevenueByRoomType)
                {
                    <tr>
                        <td>@item.RoomType</td>
                        <td>@item.Revenue USD</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No room revenue data for selected filters.</p>
    }

</div>
