@model Hotel_Management_System.Models.Receipt

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background: linear-gradient(135deg, #eef2f3 0%, #dfe9f3 100%);
    }

    h1 {
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 25px;
    }

    h4 {
        font-weight: 700;
        color: #2c3e50;
    }

    /* Details container */
    dl {
        background: rgba(255, 255, 255, 0.95);
        padding: 25px 30px;
        border-radius: 18px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        margin-bottom: 30px;
        border-left: 6px solid #28a745; /* green accent for receipts */
    }

    dt {
        font-weight: 700;
        color: #34495e;
        margin-bottom: 8px;
        font-size: 1rem;
    }

    dd {
        color: #2c3e50;
        margin-bottom: 18px;
        font-size: 0.97rem;
    }

    /* Buttons container */
    div > a {
        padding: 10px 18px;
        font-weight: 600;
        border-radius: 12px;
        text-decoration: none;
        margin-right: 12px;
        transition: background 0.25s ease;
        color: white;
    }

    /* Edit button */
    a[asp-action="Edit"] {
        background: linear-gradient(135deg, #0061ff, #4bcffa);
    }

        a[asp-action="Edit"]:hover {
            background: linear-gradient(135deg, #0050d4, #3bc0e6);
        }

    /* Back button */
    a[asp-action="Index"] {
        background: linear-gradient(135deg, #6c757d, #a4b0be);
    }

        a[asp-action="Index"]:hover {
            background: linear-gradient(135deg, #5a6268, #93a0aa);
        }
</style>


<h1>Details</h1>

<div>
    <h4>Receipt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.BookingStatus)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ReceiptID">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
