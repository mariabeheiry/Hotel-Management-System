@model Hotel_Management_System.Models.Receipt

@{
    ViewData["Title"] = "Guest Receipt";
    var numberOfDays = (Model.Booking.CheckOutDate - Model.Booking.CheckInDate).Days;
}

<h1>Guest Receipt</h1>

<h3>Guest Information</h3>
<table class="table table-bordered">
    <tr><th>Name</th><td>@Model.Booking.Guest.Name</td></tr>
    <tr><th>Phone</th><td>@Model.Booking.Guest.Phone</td></tr>
    <tr><th>Email</th><td>@Model.Booking.Guest.Email</td></tr>
</table>

<h3>Room Information</h3>
<table class="table table-bordered">
    <tr><th>Room Number</th><td>@Model.Booking.Room.RoomNumber</td></tr>
    <tr><th>Room Type</th><td>@Model.Booking.Room.RoomType</td></tr>
    <tr><th>Price per Night</th><td>@Model.Booking.Room.Price.ToString("C")</td></tr>
    <tr><th>Check-In</th><td>@Model.Booking.CheckInDate.ToShortDateString()</td></tr>
    <tr><th>Check-Out</th><td>@Model.Booking.CheckOutDate.ToShortDateString()</td></tr>
    <tr><th>Number of Nights</th><td>@numberOfDays</td></tr>
</table>

<h3>Total Amount</h3>
<p class="fs-4 fw-bold">@Model.TotalAmount.ToString("C")</p>

<p>
    <a asp-action="Index" class="btn btn-primary">Back to Receipts</a>
    <button class="btn btn-success" onclick="window.print()">Print Receipt</button>
</p>
