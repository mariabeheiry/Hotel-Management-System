@model List<Hotel_Management_System.Models.Room>

<h2>Search Available Rooms</h2>

<form method="get" asp-action="Search">
    <div class="row mb-4">
        <div class="col-md-4">
            <label>Check-In</label>
            <input type="date" name="checkIn" class="form-control" value="@ViewBag.CheckIn?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4">
            <label>Check-Out</label>
            <input type="date" name="checkOut" class="form-control" value="@ViewBag.CheckOut?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-4 pt-4">
            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </div>
    </div>
</form>


@if (TempData["CartMessage"] != null)
{
    <div id="cartMessage" class="alert alert-success">
        @TempData["CartMessage"]
    </div>

    <script>
        setTimeout(function() {
            var messageDiv = document.getElementById("cartMessage");
            if (messageDiv) {
                messageDiv.style.display = "none";
            }
        }, 3000);
    </script>
}

@if (!Model.Any())
{
    <p>No rooms available for the selected dates.</p>
}
else
{
    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Room @room.RoomNumber</h5>
                        <p>Type: @room.RoomType</p>
                        <p>Price: @room.Price EGP</p>

                        <form method="post" asp-action="AddRoomToBooking">
                            <input type="hidden" name="roomId" value="@room.RoomID" />
                            <input type="hidden" name="checkIn" value="@ViewBag.CheckIn" />
                            <input type="hidden" name="checkOut" value="@ViewBag.CheckOut" />
                            <button class="btn btn-success">Book This Room</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4 text-end">
        <form method="post" asp-action="ConfirmBookingPage" asp-controller="Bookings">
            <button type="submit" class="btn btn-primary btn-lg">
                Confirm Booking
            </button>
        </form>
    </div>
}
