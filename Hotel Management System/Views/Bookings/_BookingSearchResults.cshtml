@model IEnumerable<Hotel_Management_System.Models.Booking>

<style>
    /* Table container */
    .booking-table {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        margin-bottom: 25px;
    }

        .booking-table th {
            background: linear-gradient(135deg, #0061ff, #4bcffa);
            color: white;
            font-weight: 600;
        }

        .booking-table td, .booking-table th {
            vertical-align: middle;
            text-align: center;
        }

        .booking-table a.btn {
            margin: 2px;
            font-size: 0.85rem;
        }
</style>

<h1>All Bookings</h1>

<div class="table-responsive booking-table">
    <table class="table table-striped table-hover mb-0">
        <thead>
            <tr>
                <th>Guest</th>
                <th>Room</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Guest.Name</td>
                    <td>@item.Room.RoomNumber</td>
                    <td>@item.CheckInDate.ToShortDateString()</td>
                    <td>@item.CheckOutDate.ToShortDateString()</td>
                    <td>@item.BookingStatus</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BookingID" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookingID" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingID" class="btn btn-sm btn-danger">Delete</a>

                        @if (item.Receipt != null)
                        {
                            <a asp-controller="Receipts"
                               asp-action="Details"
                               asp-route-id="@item.Receipt.ReceiptID"
                               class="btn btn-sm btn-success">
                                Print Receipt
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No Receipt</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
