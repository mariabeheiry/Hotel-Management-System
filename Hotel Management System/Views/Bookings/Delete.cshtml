@model Hotel_Management_System.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background: linear-gradient(135deg, #eef2f3 0%, #dfe9f3 100%);
    }

    h1 {
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 25px;
    }

    h3 {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 20px;
    }

    dl {
        background: rgba(255, 255, 255, 0.95);
        padding: 25px 30px;
        border-radius: 18px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        margin-bottom: 30px;
        border-left: 6px solid #ff4d4d; /* red accent for delete */
    }

    dt {
        font-weight: 700;
        color: #34495e;
        margin-bottom: 8px;
        font-size: 1rem;
    }

    dd {
        color: #2c3e50;
        margin-bottom: 18px;
        font-size: 0.97rem;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff4d4d, #ff1a1a);
        border: none;
        font-weight: 600;
        padding: 8px 20px;
        border-radius: 10px;
        transition: background 0.25s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #e60000, #b30000);
        }

    a {
        display: inline-block;
        margin-left: 10px;
        font-weight: 600;
        color: #34495e;
        text-decoration: none;
        transition: color 0.25s ease;
    }

        a:hover {
            color: #0061ff;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Guest)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Guest.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Room)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Room.RoomNumber)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CheckInDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CheckInDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CheckOutDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CheckOutDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BookingStatus)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BookingStatus)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
