@{
    ViewData["Title"] = "Guest Dashboard";
}

<h2 class="mb-4">Welcome to Your Dashboard</h2>

<div class="row">

    <!-- My Bookings -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">My Bookings</h5>
                <p class="card-text">
                    View, edit or cancel your bookings.
                </p>
                <a asp-controller="Bookings" asp-action="MyBookings" class="btn btn-primary">Open</a>
            </div>
        </div>
    </div>

    <!-- Book New Room -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Book a Room</h5>
                <p class="card-text">
                    Search available rooms and make new bookings.
                </p>
                <a asp-controller="Bookings" asp-action="Search" class="btn btn-primary">Search Rooms</a>
            </div>
        </div>
    </div>

</div>
