@{
    ViewData["Title"] = "Guest Dashboard";
}

<style>
    /* Page background */
    body {
        background: linear-gradient(135deg, #eef2f3 0%, #dfe9f3 100%);
    }

    /* Section header */
    h2 {
        font-weight: 800;
        letter-spacing: 0.5px;
        color: #2c3e50;
    }

    /* Card styling */
    .card {
        border: 0;
        border-radius: 16px;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        background: #ffffff;
        position: relative;
        overflow: hidden;
    }

    /* Gradient top border */
    .card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        height: 6px;
        width: 100%;
        background: linear-gradient(90deg, #0061ff, #60efff);
    }

    .card-body {
        padding: 30px;
    }

    /* Hover effect */
    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 18px 30px rgba(0, 0, 0, 0.12);
    }

    .card-title {
        font-size: 1.35rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .card-text {
        color: #6c757d;
        font-size: 0.97rem;
        margin-bottom: 20px;
    }

    /* Button styling */
    .card .btn {
        padding: 10px 18px;
        font-weight: 600;
        border-radius: 12px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0061ff, #4bcffa);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0050d4, #34c7f6);
    }

    /* Row spacing improvement */
    .row {
        margin-top: 20px;
    }
</style>


<h2 class="mb-4">Welcome to Your Dashboard</h2>

<div class="row">

    <!-- My Bookings -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">My Bookings</h5>
                <p class="card-text">
                    View, edit or cancel your bookings.
                </p>
                <a asp-controller="Bookings" asp-action="MyBookings" class="btn btn-primary">Open</a>
            </div>
        </div>
    </div>

    <!-- Book New Room -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Book a Room</h5>
                <p class="card-text">
                    Search available rooms and make new bookings.
                </p>
                <a asp-controller="Bookings" asp-action="Search" class="btn btn-primary">Search Rooms</a>
            </div>
        </div>
    </div>

</div>
