@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(135deg, #eef2f3 0%, #dfe9f3 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .text-shadow-lg {
        text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
    }

    .carousel-caption {
        bottom: 20%;
    }

    /* About Section */
    .about-section h2 {
        font-weight: 800;
        color: #1a2a3a;
    }

    .about-section p {
        color: #444;
        font-size: 1.1rem;
        line-height: 1.7;
    }

    /* Card Hover Effect */
    .info-card {
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        transition: 0.35s ease;
    }

        .info-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 18px 40px rgba(0,0,0,0.22);
        }
</style>

<div class="container mt-4">

    <!-- HERO CAROUSEL -->
    <div id="heroCarousel" class="carousel slide carousel-fade mb-5" data-bs-ride="carousel">
        <div class="carousel-inner" style="border-radius: 24px; box-shadow: 0 12px 35px rgba(0,0,0,0.25);">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="https://images.pexels.com/photos/258154/pexels-photo-258154.jpeg"
                     class="d-block w-100"
                     style="height: 400px; object-fit: cover;">
                <div class="carousel-caption d-flex flex-column justify-content-center">
                    <h1 class="fw-bold text-shadow-lg">Welcome to Royal Stay Hotel</h1>
                    <p class="lead">Where comfort meets luxury.</p>
                </div>
            </div>

            <!-- Slide 2 (UPDATED) -->
            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/260922/pexels-photo-260922.jpeg"
                     class="d-block w-100"
                     style="height: 400px; object-fit: cover;">
                <div class="carousel-caption d-flex flex-column justify-content-center">
                    <h1 class="fw-bold text-shadow-lg">Elegant Atmosphere</h1>
                    <p class="lead">Experience a warm and welcoming environment.</p>
                </div>
            </div>

            <!-- Slide 3 (UPDATED) -->
            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/271624/pexels-photo-271624.jpeg"
                     class="d-block w-100"
                     style="height: 400px; object-fit: cover;">
                <div class="carousel-caption d-flex flex-column justify-content-center">
                    <h1 class="fw-bold text-shadow-lg">Luxury Rooms</h1>
                    <p class="lead">Designed for comfort, peace, and relaxation.</p>
                </div>
            </div>

        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>


    <!-- ABOUT SECTION -->
    <div class="row align-items-center about-section">
        <div class="col-md-6 mb-4">
            <h2>About Our Hotel</h2>
            <p>
                Royal Stay Hotel offers premium rooms, high-end facilities, and excellent customer service.
                Whether you’re here for business or relaxation, we ensure an unforgettable experience.
            </p>
            <p>
                Enjoy our swimming pool, spa, gym, fine dining restaurant, and 24/7 room service.
            </p>
        </div>

        <div class="col-md-6">
            <div class="card info-card">
                <img src="https://images.pexels.com/photos/271639/pexels-photo-271639.jpeg"
                     class="card-img-top"
                     style="height: 330px; object-fit: cover;" />
            </div>
        </div>
    </div>

</div>
