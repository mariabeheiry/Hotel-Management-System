@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(135deg, #eef2f3 0%, #dfe9f3 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Hero Card */
    .hero-card {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

        .hero-card .card-img-overlay h1 {
            color: #fff;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
            font-size: 3rem;
        }

        .hero-card .card-img-overlay p {
            color: #f0f0f0;
            text-shadow: 1px 1px 6px rgba(0,0,0,0.5);
            font-size: 1.3rem;
        }

    /* About Section */
    .about-section h2 {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .about-section p {
        color: #555;
    }

    .about-section .card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 28px rgba(0,0,0,0.12);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .about-section .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 36px rgba(0,0,0,0.2);
        }

    /* Images */
    .hero-card .card-img,
    .about-section .card-img-top {
        object-fit: cover;
        width: 100%;
    }

    /* Optional buttons (login/register) */
    .btn-custom {
        border-radius: 12px;
        font-weight: 600;
        padding: 10px 22px;
        transition: background 0.25s ease;
    }

    .btn-light {
        background: linear-gradient(135deg, #ffffffcc, #f0f0f0cc);
        color: #2c3e50;
        border: none;
    }

        .btn-light:hover {
            background: #ffffff;
            color: #1c1c1c;
        }

    .btn-outline-light {
        border-radius: 12px;
        border: 2px solid #fff;
        color: #fff;
        transition: background 0.25s ease, color 0.25s ease;
    }

        .btn-outline-light:hover {
            background: #fff;
            color: #2c3e50;
        }
</style>

<div class="container mt-4">

    <!-- Hero Card -->
    <div class="card text-bg-dark mb-4 hero-card">
        <img src="https://images.pexels.com/photos/258154/pexels-photo-258154.jpeg"
             class="card-img"
             style="height: 350px;" />

        <div class="card-img-overlay d-flex flex-column justify-content-center text-center">
            <h1 class="fw-bold">Welcome to Royal Stay Hotel</h1>
            <p class="lead"><strong>Where comfort meets luxury.</strong></p>

            @* <div class="mt-3">
                <a href="/Account/Login" class="btn btn-light btn-lg btn-custom me-2">Login</a>
                <a href="/Account/Register" class="btn btn-outline-light btn-lg btn-custom">Register</a>
            </div> *@
        </div>
    </div>

    <!-- About the Hotel -->
    <div class="row align-items-center about-section">
        <div class="col-md-6 mb-3">
            <h2>About Our Hotel</h2>
            <p class="fs-5">
                Royal Stay Hotel offers premium rooms, high-end facilities, and excellent customer service.
                Whether you’re here for business or relaxation, we ensure an unforgettable experience.
            </p>
            <p class="fs-6">
                Facilities include a swimming pool, restaurant, spa, gym, and 24/7 room service.
            </p>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="https://images.pexels.com/photos/271639/pexels-photo-271639.jpeg"
                     class="card-img-top"
                     style="height: 300px;" />
            </div>
        </div>
    </div>

</div>
