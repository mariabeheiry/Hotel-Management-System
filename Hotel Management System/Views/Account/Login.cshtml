@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Full-page background -->
<style>
    body {
        background: url('https://images.pexels.com/photos/4602633/pexels-photo-4602633.jpeg') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
    }

    .card-login {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.85);
    }

    /* Gradient button (same as register) */
    .login-btn {
        background: linear-gradient(135deg, #0061ff, #4bcffa) !important;
        border: none !important;
        color: white !important;
    }
</style>

<div class="container h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-3 card-login">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg login-btn">
                                Login
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
